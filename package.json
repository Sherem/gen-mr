{
    "name": "gen-mr",
    "version": "1.0.0",
    "description": "CLI tools to generate and create GitLab merge requests and GitHub pull requests with AI-generated name and description.",
    "type": "module",
    "main": "gen-mr.mjs",
    "bin": {
        "gen-mr": "./src/gen-mr.mjs",
        "gen-pr": "./src/gen-pr.mjs"
    },
    "scripts": {
        "start:mr": "node src/gen-mr.mjs",
        "start:pr": "node src/gen-pr.mjs",
        "lint": "eslint .",
        "format": "prettier --write .",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "minimist": "^1.2.8"
    },
    "keywords": [
        "gitlab",
        "github",
        "merge-request",
        "pull-request",
        "cli",
        "openai",
        "ai"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "jest": "^29.7.0",
        "@babel/core": "^7.24.0",
        "@babel/preset-env": "^7.24.0",
        "babel-jest": "^29.7.0"
    }
}